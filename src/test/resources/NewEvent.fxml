<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="312.0" prefWidth="318.0">
      <children>
         <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="313.0" prefWidth="321.0" style="-fx-background-color: FBFBF5; -fx-border-color: A0CE8B; -fx-border-width: 3;">
            <children>
               <Label fx:id="eventLabel" alignment="CENTER" prefHeight="17.0" prefWidth="302.0" text="New Event" textFill="#769766">
                  <font>
                     <Font name="Futura Medium" size="13.0" />
                  </font></Label>
               <HBox prefHeight="25.0" prefWidth="289.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="81.0" text="Name:">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Label>
                     <TextField fx:id="nameBox" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                  </children>
               </HBox>
               <HBox prefHeight="19.0" prefWidth="250.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="87.0" text="Start Time:">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Label>
                     <ComboBox fx:id="startHour" prefHeight="26.0" prefWidth="63.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                     <ComboBox fx:id="startMinute" prefHeight="26.0" prefWidth="63.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                     <ComboBox fx:id="startAmPm" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                  </children>
               </HBox>
               <HBox prefHeight="19.0" prefWidth="250.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="87.0" text="End Time:">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Label>
                     <ComboBox fx:id="endHour" prefHeight="26.0" prefWidth="63.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                     <ComboBox fx:id="endMinute" prefHeight="26.0" prefWidth="63.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                     <ComboBox fx:id="endAmPm" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                  </children>
               </HBox>
               <HBox prefHeight="19.0" prefWidth="250.0">
                  <children>
                     <Label prefHeight="25.0" prefWidth="119.0" text="Day of The Week:">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Label>
                     <ComboBox fx:id="weekdaySelect" prefWidth="150.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" />
                  </children>
               </HBox>
               <VBox prefHeight="181.0" prefWidth="301.0">
                  <children>
                     <Label text="Description(Optional):">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Label>
                     <TextArea id="DescriptionBox" fx:id="descriptionBox" prefHeight="157.0" prefWidth="250.0" style="-fx-background-color: FBFBF5;" wrapText="true" />
                  </children>
               </VBox>
               <HBox prefHeight="38.0" prefWidth="321.0">
                  <children>
                     <Button fx:id="submit" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="321.0" style="-fx-background-color: FBFBF5; -fx-border-color: black;" text="Submit">
                        <font>
                           <Font name="Futura Medium" size="13.0" />
                        </font></Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
